<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:endColor="#2600B3FF"
                android:startColor="#264EFF9D"
                android:angle="45"
                />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!-- Gradient of progress -->
                <gradient
                    android:endColor="#00B3FF"
                    android:startColor="#4EFF9D"
                    android:useLevel="true"
                    android:angle="45" />
                <stroke
                    android:width="1dp"
                    android:color="#ffffff" />
                <!-- Corners of pregress -->
                <corners
                    android:radius="5dp" />
            </shape>
        </clip>
    </item>
</layer-list>
